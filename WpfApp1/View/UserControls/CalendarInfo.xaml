<UserControl x:Class="WpfApp1.View.UserControls.CalendarInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="calenderTextBlock" Grid.Row="0" FontWeight="Bold" FontSize="15" Text="{Binding CalendarText}" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
        <Calendar x:Name="calender" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
